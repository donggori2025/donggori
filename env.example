# Vercel Blob Storage 설정 (사용 중)
BLOB_READ_WRITE_TOKEN=your-blob-read-write-token

# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
# 서버 전용 (RLS 우회용 서비스 롤 키) — 서버 라우트에서만 사용하세요
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# 이미지 서비스 선택 (vercel-blob 또는 aws-s3)
IMAGE_SERVICE=vercel-blob

# AWS S3 설정 (선택사항 - S3 사용 시)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=donggori-images

# CloudFront CDN 설정 (선택사항)
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# 네이버맵 API 설정
NEXT_PUBLIC_NAVER_MAP_CLIENT_ID=your-naver-map-client-id

# Clerk 인증 설정 (Pro 플랜)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
# 선택: 커스텀 도메인(frontend API) 사용 시 지정 (예: clerk.donggori.com)
# NEXT_PUBLIC_CLERK_FRONTEND_API=your-clerk-frontend-api-domain

# Clerk 도메인 설정 (Pro 플랜에서 Allowlist 사용 시)
CLERK_ALLOWED_EMAIL_DOMAINS=gmail.com,naver.com,kakao.com,faddit.co.kr

# Google OAuth 설정 (소셜 로그인용)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# 개발 환경: 기본 Clerk 도메인 사용
GOOGLE_REDIRECT_URI=https://donggori.clerk.accounts.dev/v1/oauth_callback
# 프로덕션 환경: 커스텀 도메인 사용 시 아래 주석 해제
# GOOGLE_REDIRECT_URI=https://clerk.donggori.com/v1/oauth_callback

# Naver OAuth 설정 (소셜 로그인용)
NEXT_PUBLIC_NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
# 개발 환경
NEXT_PUBLIC_NAVER_REDIRECT_URI=http://localhost:3000/api/auth/naver/callback
# 프로덕션 환경 (배포 시 사용)
# NEXT_PUBLIC_NAVER_REDIRECT_URI=https://donggori.com/api/auth/naver/callback

# Kakao OAuth 설정 (소셜 로그인용)
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
# 개발 환경
NEXT_PUBLIC_KAKAO_REDIRECT_URI=http://localhost:3000/api/auth/kakao/callback
# 프로덕션 환경 (배포 시 사용)
# NEXT_PUBLIC_KAKAO_REDIRECT_URI=https://donggori.com/api/auth/kakao/callback

# 배포 환경 사이트 URL 설정
NEXT_PUBLIC_SITE_URL=https://donggori.com 