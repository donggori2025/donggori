// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 사용자 인증을 위한 모델
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  phoneNumber  String   @unique
  password     String?
  profileImage String?
  signupMethod String   @default("email") // email, kakao, naver, google
  externalId   String?  // 소셜 로그인 외부 ID
  kakaoMessageConsent Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 봉제공장 인증을 위한 모델
model FactoryAuth {
  id        String   @id @default(cuid())
  factoryId String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 휴대폰 인증을 위한 모델
model PhoneOtp {
  id         String    @id @default(cuid())
  phone      String
  code       String
  purpose    String    // signup, login, reset
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime  @default(now())
} 